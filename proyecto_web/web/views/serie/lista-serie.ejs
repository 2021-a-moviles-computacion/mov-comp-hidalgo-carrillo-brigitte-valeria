<%- include('../comunes/cabecera') %>
<div class='container'>

    <% const existeMensaje = typeof datos.mensaje !== 'undefined'%>
    <% if(existeMensaje){%>
        <% if(datos.mensaje.includes("Se editó") || datos.mensaje.includes("Se eliminó")){%>
            <div class="alert alert-success" role="alert">
                <%= datos.mensaje%>
            </div>
        <%} else {%>
                <div class="alert alert-danger" role="alert">
                    <%= datos.mensaje%>
                </div>
            <%}%>
    <%}%>


    <h1>Lista</h1>
    <form action='/serie/lista-serie' method='get'>
        <div class="mb-3">
            <label for="busqueda" class="form-label">
                Búsqueda
            </label>
            <!-- Viajar como parametro de consulta con el name (en este caso busqueda)    -->
            <input placeholder="Ej: Friends"
                   type="text"
                   name="busqueda"
                   class="form-control"
                   id="busqueda"
                   aria-describedby="ayudaBusqueda">
            <div id="ayudaBusqueda" class="form-text">
                Puede buscar por nombre serie o nombre director de la serie.
            </div>
        </div>
        <button type="submit" class="btn btn-primary w-100">Buscar</button>
        <br>
    </form>

    <br>
    <br>
    <table class="table text-center">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre serie</th>
            <th scope="col">Nombre director</th>
            <th scope="col">Fecha lanzamiento</th>
            <th scope="col">¿Premio Emmy?</th>
            <th scope="col">Número temporadas</th>
            <th scope="col">Actualizar</th>
            <th scope="col">Eliminar</th>
        </tr>
        </thead>
        <tbody>
        <ul>
            <% datos.serie.forEach( (objeto) => { %>
                <tr>
                    <th><%= objeto.id %></th>
                    <th><%= objeto.nombre_serie %></th>
                    <th><%= objeto.nombre_director %></th>
                    <th><%= objeto.fecha_lanzamiento %></th>
                    <th><%= objeto.tiene_emmy %></th>
                    <th><%= objeto.temporadas %></th>
                    <th>
                        <form action='/serie/vista-editar/<%= objeto.id %>' method='post'>
                            <button class='btn btn-info'>Actualizar</button>
                        </form>
                    </th>
                    <th>
                        <form action='/serie/eliminar-serie/<%= objeto.id %>' method='post'>
                            <button class='btn btn-danger'>Eliminar</button>
                        </form>
                    </th>
                </tr>
            <% } ) %>
        </ul>
        </tbody>
    </table>
    <br>
    <div>
        <a href='/serie/vista-crear'>
            <button class='btn btn-success w-100'>
                Crear nueva serie
            </button>
        </a>
    </div>
</div>
<%- include('../comunes/footer') %>