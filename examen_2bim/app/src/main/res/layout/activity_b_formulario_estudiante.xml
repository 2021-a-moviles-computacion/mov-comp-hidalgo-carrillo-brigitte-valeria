<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_registra_est_for_est"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="@string/menItmCol_registrarEst" />

        <TextView
            android:id="@+id/tv_informacion_colegio_for_est"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="28dp"
            android:text="@string/txt_inf_colegio" />

        <TextView
            android:id="@+id/tv_pone_nombre_cole_for_est"
            android:layout_width="192dp"
            android:layout_height="31dp"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="@string/txt_inf_estudiante" />

        <EditText
            android:id="@+id/it_nombre_est_for_est"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/txt_nombre"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/it_cedula_for_est"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/txt_cedula"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/it_fecha_nac_for_est"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/txt_fecha_nac"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tv_sexo_for_est"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_marginTop="12dp"
            android:text="@string/txt_sexo" />

        <RadioGroup
            android:id="@+id/rg_sexo_for_est"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rb_femenino_for_est"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_femenino" />

            <RadioButton
                android:id="@+id/rb_masculino_for_est"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_masculino" />
        </RadioGroup>

        <EditText
            android:id="@+id/it_curso_for_est"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/txt_curso"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/it_coord_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Coordenada latitud"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/it_coord_long"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Coordenada longitud"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:inputType="textPersonName" />



        <Button
            android:id="@+id/btn_registrar_for_est"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/menItmCol_registrarEst" />



        <Button
            android:id="@+id/btn_editar_for_est"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="20dp"
            android:text="@string/txt_act_est" />


    </LinearLayout>
</ScrollView>