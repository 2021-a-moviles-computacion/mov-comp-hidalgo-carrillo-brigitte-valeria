<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_informacion_colegio_for_est"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:gravity="center_horizontal"
            android:text="@string/txt_inf_colegio"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/it_nombre_cole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre Colegio"
            android:inputType="textPersonName" />



            <Switch
                android:id="@+id/sw_esfiscal_cole"
                android:text="¿Es fiscal?   "
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" />


        <EditText
            android:id="@+id/it_distrito_cole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Número distrito"
            android:inputType="number" />

        <EditText
            android:id="@+id/it_num_aulas_cole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Número aulas"
            android:inputType="number" />

        <Button
            android:id="@+id/id_btn_anadir_cole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/btn_registrar" />

        <Button
            android:id="@+id/btn_editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/txt_act_cole" />

    </LinearLayout>
</ScrollView>