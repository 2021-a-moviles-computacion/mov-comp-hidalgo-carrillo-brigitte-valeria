<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    tools:context=".fragments.HomeFragment"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="489dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/container1"
            android:layout_width="229dp"
            android:layout_height="294dp"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_receta"
            tools:ignore="NotSibling">

            <ImageView
                android:id="@+id/img_receta"
                android:layout_width="208dp"
                android:layout_height="157dp"
                android:layout_margin="0dp"
                android:layout_marginTop="72dp"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/receta_fideos" />

            <TextView
                android:id="@+id/titulo_receta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Title of a Blog"
                android:textColor="#000"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/titulo_nombre_autor_recete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mitch Tabian"
                android:textSize="15sp" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>