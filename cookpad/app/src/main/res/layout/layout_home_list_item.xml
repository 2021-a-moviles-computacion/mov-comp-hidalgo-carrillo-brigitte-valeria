<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    android:layout_margin="10dp"

    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_usuario1"
                android:layout_width="157dp"
                android:layout_height="157dp"
                android:padding="0dp"
                android:src="@drawable/usuario1"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/tv_nombre_autor_recete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nombre_autor_receta"
                android:textColor="@color/colorNombreAutorReceta"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/img_receta"
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:layout_margin="10dp"
                android:layout_marginTop="72dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/receta_fideos" />

            <TextView
                android:id="@+id/tv_titulo_receta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titulo_receta"
                android:textColor="@color/colorTituloReceta"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="10dp"/>



        </LinearLayout>

</androidx.cardview.widget.CardView>