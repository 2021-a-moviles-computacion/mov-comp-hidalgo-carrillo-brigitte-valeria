<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_usuario1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/usuario1" />

            <TextView
                android:id="@+id/tv_nombre_autor_recete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/str_nombre_autor_receta"
                android:textColor="@color/colorNombreAutorReceta"
                android:textSize="18sp" />
        </RelativeLayout>


            <ImageView
                android:id="@+id/img_receta"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginTop="72dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/receta_fideos" />

            <TextView
                android:id="@+id/et_titulo_receta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/str_titulo_receta"
                android:textColor="@color/colorTituloReceta"
                android:textSize="18sp" />
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="2dp"
            app:singleLine="true">
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_receta"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipIcon="@mipmap/delicious_food_icon_foreground"
                android:text="0"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_truco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipIcon="@mipmap/clapping_hands_icon_foreground"
                android:text="0"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipIcon="@mipmap/heart_icon_foreground"
                android:text="0"/>
    </com.google.android.material.chip.ChipGroup>


    </LinearLayout>

</androidx.cardview.widget.CardView>